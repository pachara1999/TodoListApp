@{
    ViewData["Title"] = "Home";
}
</br>
<div class="row pt-5">
    <div class="col-md-6">
        <div class="card text-center border-0">
            <div class="card-header bg-danger">
                <h1 class="text-white"><i class="fa-solid fa-list"></i> Todo List</h1>
            </div>
            <div class="card-body">
                <table id="todotbl" class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col" width="10%">#</th>
                            <th scope="col" width="50%">Todo Lists</th>
                            <th scope="col" width="15%">Date</th>
                            <th scope="col" width="25%"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 1; i < 11; i++)
                        {
                            <tr>
                                <td>
                                    @i
                                </td>
                                <td>
                                    todo
                                </td>
                                <td>
                                    1/1/2022
                                </td>
                                <td>
                                    <button type="button" class="btn btn-warning btn-sm">
                                        <i class="fa fa-pen"></i>
                                    </button>
                                    <button type="button" class="btn btn-danger btn-sm text-dark" onclick='Delete()'>
                                        <i class="fa-solid fa-trash"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="col-md-1"></div>
    <div class="col-md-5">
        <div class="card border-0">
            <div class="card-header bg-danger text-center">
                <h1 class="text-white"><i class="fa-solid fa-plus-circle"></i> Add Todo List</h1>
            </div>
            <form method="post" asp-action="">
                <div class="card-body">
                    <div class="form-group">
                        <label for="">Todo List Topic</label>
                        <input type="text" class="form-control" name="list" id="list" required>
                    </div>
                    <div class="form-group">
                        <label for="">Finish Date</label>
                        <input type="date" class="form-control" name="finishdate">
                    </div>
                    <div class="form-group">
                        <label for="">Priority</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="priority" id="p1" value="option1">
                        <label class="form-check-label" for="p1">Less</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="priority" id="p2" value="option1">
                        <label class="form-check-label" for="p2">Medium</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="priority" id="p3" value="option1">
                        <label class="form-check-label" for="p3">More</label>
                    </div>
                </div>
                <div class="card-footer text-center">
                    <button type="submit" class="btn btn-success">Add</button>
                    <button type="reset" class="btn btn-danger">Clear</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
<script type="text/javascript">
    $(document).ready(function () {
        $('#todotbl').DataTable({
            searching: false,
            lengthChange: false,
            pageLength: 5,
            ordering: false
        });
    });

    function Delete() {
        Swal.fire({
            title: 'Deleted',
            text: "Are you sure to delete this todo list ?",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
            if (result.isConfirmed) {
                Swal.fire(
                    'Deleted Successfully !',
                    'Your todo list has been deleted.',
                    'success'
                )
            }
        })
    }
</script>
}
